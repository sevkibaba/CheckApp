{% extends 'templates/app.twig' %}

{% block content %}

	<ul class="nav nav-tabs">
	   <li class="active"><a data-toggle="tab" href="#home">Current Check</a></li>
	   <li><a data-toggle="tab" href="#menu1">Checks Table</a></li>

	 </ul>
	
	<div class="tab-content">
	   <div id="home" class="tab-pane fade in active">

	     	<div class = "row" id='first-row'>

	     		<div class = "col-md-8 col-md-offset-0">

	     			<div class = "panel panel-default">

	     				<div class = "panel-heading" id="check-name-container">
	     					<label for="check-name">Check Name</label>
	     					<input class="form-control" id="check-name" value= "{{ name }}" placeholder="Please write a decesive name" >
	     				</div>
	     				
     					<input type="hidden" class="check-id" id="check-id" style="width:40px;" value= "{{ id }}">

	     				<div class = "panel-body" style="display:none;">

	     						<div class="row-appender">

	     							<div class='row' id="addNamePrice">

	     								<div class ="form-group col-md-12" id="order-container">

	     									<label for = "products">Product</label>
	     									<input list="products" class="form-control form-group-lg input-lg" name="products" id="selected-product-id" type="" placeholder="Ex: Espresso">
	     									<datalist id="products" >
	     										
	     									</datalist>
	     								
	     								</div>

	     							</div>
	     						</div>
	     						
	     						<div class="panel-footer">
	     							<label for="total">Calculated <br> Total</label>
	     							<input type="text" class ="total " step="0.01" id="total" name="total" value="{{ total|number_format(2) }}">

	     						</div>
								
								<div class="button-container" id="newcheck-button">									
	     							<button class = "btn btn-success" id="new-check">New Check</button>
		     						<span class="button-container" id="closed-button">
		     							<label for="closed">Closed?</label>
		     							
		     							{% if closed == 1 %}
		     							    {% set selected = true %}
		     								<input type="checkbox" id="closed" name="closed" value="" {% if selected %}checked {% endif %}>
		     							{% else %}
		     								<input type="checkbox" id="closed" name="closed" value="" {% if selected %} unchecked {% endif %}>
		     							{% endif %}

		     						</span>
								</div>


	     				</div>
 						
 						<table class="table table-bordered">
 							<tbody id="dynamic_field">
 								
 							</tbody>
 						</table>
 			
	     			</div>

	     		</div>


	     	</div>


	   </div>

	   <div id="menu1" class="tab-pane fade">
	   	<div class="row" id="second-row">
	   		<table class="table table-striped">
	   			<div class="table-container">	
	   				<table id="table_id" class="row-border">
	   				    <thead>
	   				        <tr>
	   				            <th>Check Id</th>
	   				            <th>Order Id</th>
	   				            <th>Prodcut</th>
	   				            <th>Price</th>
	   				            <th>Quantity</th>
	   				        </tr>
	   				    </thead>
	   				    <tbody>				        
	   				    </tbody>
	   				    <tfoot>
	   				        <tr>
	   				            <th>Check Id</th>
	   				            <th>Order Id</th>
	   				            <th>Prodcut</th>
	   				            <th>Price</th>
	   				            <th>Quantity</th>
	   				        </tr>
	   				    </tfoot>
	   				</table>
	   			</div>


	   		</table>
	   	</div>

	   </div>
	   
	</div>

<script src="/js/check.js"></script>
<script src="/js/checkdatatable.js"></script>
<script src="/js/checknavigationarrows.js"></script>
<script src="/js/checkorderlist.js"></script>

<script type="text/javascript">
addNamePrice();
sendCheckName();
sendClosedParameter();

</script>

{% endblock %}

