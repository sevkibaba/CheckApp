{% extends 'templates/app.twig' %}

{% block content %}

	<div class = "row">

		<div class = ".col-md-6 col-md-offset-3">

			<div class = "panel panel-default">

				<div class = "panel-heading">Add Product</div>
				<div class = "panel-body">

					<form action = "{{path_for('product.add')}}" method = "post" autocomplete = "off">

						<div class ="form-group{{ errors.email ? ' has-error' : "" }}">

							<label for = "name">Product Name</label>
							<input type="text" name="name" placeholder="Cortado" class="form-control">
							<!-- {% if errors.email %}
								<span class = "help-block">{{ errors.email | first }}</span>
							{% endif %} -->
						</div>

						<div class ="form-group{{ errors.name ? ' has-error' : "" }}">

							<label for = "price">Price</label>
							<input type="number" name = "price" class = "form-control">
							<!-- {% if errors.name %}
								<span class = "help-block">{{ errors.name | first }}</span>
							{% endif %} -->
						</div>

						<button type = "submit" class = "btn btn-default">Add Product</button>

						{{ csrf.field | raw }}

					</form>

				</div>

			</div>

		</div>

	</div>

{% endblock %}